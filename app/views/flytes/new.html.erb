<h1>New Flyte</h1>

<%= form_with(model: flyte, local: true) do |form| %>
  <% if flyte.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(flyte.errors.count, "error") %> prohibited this flyte from being saved:</h2>
      <ul>
      <% flyte.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :shopper_city %><br />
    <%= form.text_field :shopper_city, id: :flyte_shopper_city, required: true %>
  </div>

    <div class="field">
    <%= form.label :flyer_city %><br />
    <%= form.text_field :flyer_city, id: :flyte_flyer_city, required: true %>
  </div>

    <div class="field">
    <%= form.label :item_description %><br />
    <%= form.text_area :item_description, rows: 4, id: :flyte_item_description, required: true %>
  </div>

    <div class="field">
    <%= form.label :price %><br />
    <%= form.number_field :price, id: :flyte_price, required: true %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<%= link_to 'Back', flytes_path %>