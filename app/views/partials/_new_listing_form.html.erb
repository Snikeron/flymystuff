<%= form_with(model: listing, multipart: true, local: true) do |form| %>
  <% if listing.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(listing.errors.count, "error") %> prohibited this listing from being saved:</h2>

      <ul>
      <% listing.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <strong><%= form.label :shopper_city, 'Where are you based?' %></strong><br />
    <%= form.text_field :shopper_city, id: :listing_shopper_city, required: true %>
  </div>

    <div class="field">
    <strong><%= form.label :flyer_city, 'Where would you like to purchase from?' %></strong><br />
    <%= form.text_field :flyer_city, id: :listing_flyer_city, required: true %>
  </div>

    <div class="field">
    <strong><%= form.label :item_description %></strong><br />
    <%= form.text_area :item_description, rows: 4, id: :listing_item_description, required: true %>
  </div>

    <div class="field">
    <strong><%= form.label :item_photo %></strong><br />
    <%= form.file_field :item_photo, required: true %>
  </div>

    <div class="field">
    <strong><%= form.label :price, 'Price you are willing to pay:' %></strong><br />
    <%= form.number_field :price, id: :listing_price, required: true %>
  </div>

  <div class="actions">
    <%= form.submit 'Submit', class: 'myButton-left' %>
  </div>
<% end %>
